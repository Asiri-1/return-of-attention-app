rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin user gets read access to all data for analytics
    match /{document=**} {
      allow read: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
    }
    
    // Regular users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Practice sessions for each user
      match /practiceSessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        // Admin can read all practice sessions for analytics
        allow read: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
      }
      
      // Mind recovery sessions for each user  
      match /mindRecoveryHistory/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
      }
      
      // Emotional notes for each user
      match /emotionalNotes/{noteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
      }
      
      // AI chat interactions for each user
      match /chatInteractions/{interactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
      }
      
      // ✅ NEW: User progress tracking for stage progression (CRITICAL for audit compliance)
      match /userProgress/{progressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
      }
      
      // ✅ NEW: Stage progression data (hours-based tracking)
      match /stageProgression/{stageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
      }
      
      // ✅ NEW: Session counts and completion tracking
      match /sessionCounts/{countId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
      }
      
      // ✅ NEW: Stage hours tracking (per stage)
      match /stageHours/{hoursId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
      }
    }
    
    // ✅ NEW: Global stage progression analytics (admin only)
    match /analytics/{analyticsId} {
      allow read, write: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
    }
    
    // ✅ NEW: System-wide stage requirements and configuration
    match /systemConfig/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
    }
    
    // ✅ NEW: Global leaderboards and progress tracking
    match /leaderboards/{boardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'asiriamarasinghe35@gmail.com';
    }
  }
}